class Solution
{
    public int find(int n)
    {
        // code here
        int sum=0;
        int count=0;
        
        for(int i=1;i<=n;i++){
            
            
            sum+=i;
            
            if(sum>n)
             return -1;
             
            else if(sum<n)
             count++;
             
            else
             return ++count;
        }
        
        return -1;
    }
}
